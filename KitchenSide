  Text,
  StyleSheet,
  View,
  TouchableOpacity,
  Alert,
  RefreshControl,
  ActivityIndicator,
  StatusBar,
  Modal,
  TextInput,
  FlatList,
  ScrollView,
  Dimensions,
  Switch,
  AppState,
  Animated,
  Easing,
  Platform
} from "react-native";
