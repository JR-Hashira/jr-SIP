import React, { useState, useEffect } from 'react';
import {
  SafeAreaView,
  ScrollView,
  Text,
  StyleSheet,
  View,
  TouchableOpacity,
  Alert
} from 'react-native';
import { createClient } from '@supabase/supabase-js';

const SUPABASE_URL = "https://tbfhhplpwqelstuzmlmh.supabase.co";
const SUPABASE_ANON_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InRiZmhocGxwd3FlbHN0dXptbG1oIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjM0ODY0NzYsImV4cCI6MjA3OTA2MjQ3Nn0.7v1snYLBqDEvNfGS9D74j_CqAUteZSI7oZxKrPFifPw';

const supabase = createClient(SUPABASE_URL, SUPABASE_ANON_KEY);

// Kitchen Display Screen
const KitchenScreen = () => {
  const [orders, setOrders] = useState([]);

  // Load orders every 3 seconds
  useEffect(() => {
    const loadOrders = async () => {
      try {
        const { data, error } = await supabase
          .from('orders')
          .select('*')
          .order('created_at', { ascending: false });

        if (error) {
          console.error("Supabase fetch error:", error);
          return;
        }

        // Only show active orders
        setOrders(data.filter(order => order.status !== 'completed'));

      } catch (error) {
        console.error("Error loading orders:", error);
      }
    };

    loadOrders(); 
    const interval = setInterval(loadOrders, 3000);
    return () => clearInterval(interval);
  }, []);

  const updateOrderStatus = async (orderId, newStatus) => {
    const { error } = await supabase
      .from('orders')
      .update({ status: newStatus })
      .eq('id', orderId);

    if (error) {
      Alert.alert("Error updating order");
      return;
    }

    // Reload orders
    const { data } = await supabase
      .from('orders')
      .select('*')
      .order('created_at', { ascending: false });

    setOrders(data.filter(order => order.status !== 'completed'));
  };

  const clearCompletedOrders = async () => {
    const { error } = await supabase
      .from('orders')
      .delete()
      .eq('status', 'completed');

    if (error) {
      Alert.alert("Error clearing completed orders");
      return;
    }

    const { data } = await supabase
      .from('orders')
      .select('*')
      .order('created_at', { ascending: false });

    setOrders(data.filter(order => order.status !== 'completed'));
  };

  const getStatusColor = (status) => {
    switch (status) {
      case 'ready': return '#00ff00';
      case 'preparing': return '#ffa500';
      case 'pending': return '#ff4444';
      default: return '#ff4444';
    }
  };

  const getStatusText = (status) => {
    switch (status) {
      case 'ready': return 'READY FOR PICKUP';
      case 'preparing': return 'IN PROGRESS';
      case 'pending': return 'NEW ORDER';
      default: return status.toUpperCase();
    }
  };

  return (
    <SafeAreaView style={styles.container}>
      <ScrollView contentContainerStyle={styles.scrollContent}>
        <Text style={styles.title}>KITCHEN DISPLAY</Text>
        
        <View style={styles.headerRow}>
          <Text style={styles.orderCount}>Active Orders: {orders.length}</Text>
          <TouchableOpacity style={styles.clearButton} onPress={clearCompletedOrders}>
            <Text style={styles.clearButtonText}>Clear Completed</Text>
          </TouchableOpacity>
        </View>

        {orders.length === 0 ? (
          <View style={styles.emptyState}>
            <Text style={styles.emptyStateText}>No active orders</Text>
            <Text style={styles.emptyStateSubtext}>New orders will appear here automatically</Text>
          </View>
        ) : (
          orders.map((order) => (
            <View
              key={order.id}
              style={[
                styles.kitchenOrderCard,
                { borderLeftColor: getStatusColor(order.status) }
              ]}
            >
              <View style={styles.orderHeader}>
                <View>
                  <Text style={styles.orderId}>Order #{order.id}</Text>
                  <Text style={styles.orderTime}>
                    {new Date(order.created_at).toLocaleString()}
                  </Text>
                </View>

                <View style={[styles.statusBadge, { backgroundColor: getStatusColor(order.status) }]}>
                  <Text style={styles.statusBadgeText}>{getStatusText(order.status)}</Text>
                </View>
              </View>

              <View style={styles.customerInfo}>
                <Text style={styles.customerLabel}>Customer:</Text>
                <Text style={styles.customerName}>{order.custumerName}</Text>
              </View>

              <View style={styles.itemsSection}>
                <Text style={styles.itemsLabel}>Items:</Text>

                {order.Order_items.map((item, index) => (
                  <View key={index} style={styles.itemRow}>
                    <Text style={styles.itemName}>â€¢ {item.name}</Text>
                    <Text style={styles.itemPrice}>{item.price}</Text>
                  </View>
                ))}
              </View>

              <View style={styles.totalRow}>
                <Text style={styles.totalLabel}>Total:</Text>
                <Text style={styles.totalAmount}>${order.total_price}</Text>
              </View>

              <View style={styles.actionButtons}>
                <TouchableOpacity
                  style={[
                    styles.actionButton,
                    { backgroundColor: order.status === 'pending' ? '#ffa500' : '#555' }
                  ]}
                  onPress={() => updateOrderStatus(order.id, 'preparing')}
                  disabled={order.status !== 'pending'}
                >
                  <Text style={styles.actionButtonText}>Start Cooking</Text>
                </TouchableOpacity>

                <TouchableOpacity
                  style={[
                    styles.actionButton,
                    { backgroundColor: order.status === 'preparing' ? '#00ff00' : '#555' }
                  ]}
                  onPress={() => updateOrderStatus(order.id, 'ready')}
                  disabled={order.status !== 'preparing'}
                >
                  <Text style={styles.actionButtonText}>Mark Ready</Text>
                </TouchableOpacity>

                <TouchableOpacity
                  style={[
                    styles.actionButton,
                    { backgroundColor: order.status === 'ready' ? '#238636' : '#555' }
                  ]}
                  onPress={() => updateOrderStatus(order.id, 'completed')}
                  disabled={order.status !== 'ready'}
                >
                  <Text style={styles.actionButtonText}>Complete</Text>
                </TouchableOpacity>
              </View>

            </View>
          ))
        )}
      </ScrollView>
    </SafeAreaView>
  );
};

// Styles remain exactly the same
const styles = StyleSheet.create({
  container: { flex: 1, backgroundColor: '#1a1a1a' },
  scrollContent: { flexGrow: 1, padding: 16 },
  title: { fontSize: 28, fontWeight: 'bold', color: '#00ff00', textAlign: 'center', marginBottom: 20 },
  headerRow: { flexDirection: 'row', justifyContent: 'space-between', marginBottom: 20 },
  orderCount: { color: '#fff', fontSize: 16 },
  clearButton: { backgroundColor: '#ff6b35', padding: 8, borderRadius: 6 },
  clearButtonText: { color: 'white', fontWeight: 'bold' },
  emptyState: { alignItems: 'center', paddingVertical: 60 },
  emptyStateText: { fontSize: 20, color: '#888' },
  emptyStateSubtext: { color: '#666' },
  kitchenOrderCard: { backgroundColor: '#2d2d2d', borderRadius: 12, padding: 16, marginBottom: 16, borderLeftWidth: 6 },
  orderHeader: { flexDirection: 'row', justifyContent: 'space-between', marginBottom: 12 },
  orderId: { fontSize: 18, color: '#fff', fontWeight: 'bold' },
  orderTime: { color: '#888', fontSize: 12 },
  statusBadge: { paddingHorizontal: 8, paddingVertical: 4, borderRadius: 4 },
  statusBadgeText: { color: '#fff', fontWeight: 'bold' },
  customerInfo: { flexDirection: 'row', marginBottom: 12 },
  customerLabel: { color: '#888' },
  customerName: { color: '#fff', fontSize: 16 },
  itemsSection: { marginBottom: 12 },
  itemsLabel: { color: '#888', marginBottom: 6 },
  itemRow: { flexDirection: 'row', justifyContent: 'space-between' },
  itemName: { color: '#fff' },
  itemPrice: { color: '#00ff00' },
  totalRow: { flexDirection: 'row', justifyContent: 'space-between', paddingTop: 8, borderTopWidth: 1, borderTopColor: '#444' },
  totalLabel: { color: '#fff', fontWeight: 'bold' },
  totalAmount: { color: '#00ff00', fontSize: 18 },
  actionButtons: { flexDirection: 'row', gap: 8 },
  actionButton: { flex: 1, padding: 10, borderRadius: 6, alignItems: 'center' },
  actionButtonText: { color: 'white', fontWeight: 'bold' }
});

export default KitchenScreen;
