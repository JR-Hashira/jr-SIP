// Live Update Notification Component
const LiveNotification = ({ message, type = 'info', visible, onHide }) => {
  const fadeAnim = useRef(new Animated.Value(0)).current;
  const slideAnim = useRef(new Animated.Value(-50)).current;

  useEffect(() => {
    if (visible) {
      Animated.parallel([
        Animated.timing(fadeAnim, {
          toValue: 1,
          duration: 300,
          useNativeDriver: true,
        }),
        Animated.timing(slideAnim, {
          toValue: 0,
          duration: 300,
          easing: Easing.out(Easing.cubic),
          useNativeDriver: true,
        }),
      ]).start();

      const timer = setTimeout(() => {
        hideNotification();
      }, 3000);

      return () => clearTimeout(timer);
    } else {
      hideNotification();
    }
  }, [visible]);

  const hideNotification = () => {
    Animated.parallel([
      Animated.timing(fadeAnim, {
        toValue: 0,
        duration: 200,
        useNativeDriver: true,
      }),
      Animated.timing(slideAnim, {
        toValue: -50,
        duration: 200,
        useNativeDriver: true,
      }),
    ]).start(() => onHide?.());
  };

  if (!visible) return null;

  const bgColor = type === 'success' ? Colors.success : 
                 type === 'error' ? Colors.error : 
                 Colors.notification;

  return (
    <Animated.View
      style={[
        styles.liveNotification,
        {
          backgroundColor: bgColor,
          opacity: fadeAnim,
          transform: [{ translateY: slideAnim }],
        },
      ]}
    >
      <Icon 
        name={type === 'success' ? 'check-circle' : 
              type === 'error' ? 'error' : 'notifications-active'} 
        size={20} 
        color={Colors.text} 
      />
      <Text style={styles.liveNotificationText} numberOfLines={2}>
        {message}
      </Text>
      <TouchableOpacity onPress={hideNotification} style={styles.notificationClose}>
        <Icon name="close" size={20} color={Colors.text} />
      </TouchableOpacity>
    </Animated.View>
  );
};

// Enhanced Connection Status Component
const ConnectionStatus = ({ isConnected, lastUpdate }) => {
  const getConnectionText = () => {
    if (isConnected === true) {
      return "LIVE ‚Ä¢ REAL-TIME";
    } else if (isConnected === false) {
      return "OFFLINE ‚Ä¢ MANUAL";
    } else {
      return "CONNECTING...";
    }
  };

  const getIconName = () => {
    if (isConnected === true) return "wifi";
    if (isConnected === false) return "wifi-off";
    return "wifi-find";
  };

  return (
    <View style={styles.connectionStatus}>
      <View style={styles.connectionIndicator}>
        <View style={[
          styles.connectionDot,
          { 
            backgroundColor: isConnected === true ? Colors.connected : 
                           isConnected === false ? Colors.disconnected : 
                           Colors.connecting,
          }
        ]}>
          <Icon 
            name={getIconName()} 
            size={12} 
            color={Colors.background} 
          />
        </View>
        <Text style={styles.connectionText}>{getConnectionText()}</Text>
      </View>
      {lastUpdate && (
        <Text style={styles.lastUpdateText}>
          Updated: {new Date(lastUpdate).toLocaleTimeString([], { 
            hour: '2-digit', 
            minute: '2-digit',
            second: '2-digit' 
          })}
        </Text>
      )}
    </View>
  );
};

// Enhanced Kitchen Status Component
const KitchenStatus = ({ 
  isOpen, 
  onToggle, 
  activeOrdersCount, 
  connectionStatus,
  newOrderCount = 0 
}) => {
  const [showNewOrderBadge, setShowNewOrderBadge] = useState(false);

  useEffect(() => {
    if (newOrderCount > 0) {
      setShowNewOrderBadge(true);
      const timer = setTimeout(() => setShowNewOrderBadge(false), 2000);
      return () => clearTimeout(timer);
    }
  }, [newOrderCount]);

  return (
    <View style={styles.kitchenStatusContainer}>
      <View style={styles.statusRow}>
        <View style={styles.statusInfo}>
          <View style={styles.statusIndicator}>
            <View style={[
              styles.statusDot,
              { backgroundColor: isOpen ? Colors.success : Colors.error }
            ]} />
            <Text style={styles.statusTitle}>
              {isOpen ? "ACTIVE ORDERS" : "KITCHEN CLOSED"}
            </Text>
          </View>
          <View style={styles.orderCountContainer}>
            <Text style={styles.orderCount}>{activeOrdersCount}</Text>
            {showNewOrderBadge && (
              <View style={styles.newOrderBadge}>
                <Text style={styles.newOrderBadgeText}>+{newOrderCount}</Text>
              </View>
            )}
          </View>
        </View>
        
        <TouchableOpacity
          style={[
            styles.kitchenToggle,
            { 
              backgroundColor: isOpen ? Colors.error : Colors.success,
            }
          ]}
          onPress={onToggle}
          activeOpacity={0.8}
        >
          <Icon 
            name={isOpen ? "close" : "restaurant"} 
            size={18} 
            color={Colors.text} 
          />
          <Text style={styles.kitchenToggleText}>
            {isOpen ? "CLOSE KITCHEN" : "OPEN KITCHEN"}
          </Text>
        </TouchableOpacity>
      </View>
      
      <View style={styles.bottomRow}>
        {!isOpen && (
          <View style={styles.closedWarning}>
            <Icon name="warning" size={16} color={Colors.warning} />
            <Text style={styles.closedWarningText}>
              Kitchen is closed. No new orders will be accepted.
            </Text>
          </View>
        )}
        
        <ConnectionStatus 
          isConnected={connectionStatus.connected}
          lastUpdate={connectionStatus.lastUpdate}
        />
      </View>
    </View>
  );
};

// Enhanced Order Card with Complete/Decline buttons
const OrderCard = ({ order, onUpdateStatus, onDecline, isNew = false }) => {
  const [highlight, setHighlight] = useState(isNew);
  const slideAnim = useRef(new Animated.Value(isNew ? -20 : 0)).current;
  const fadeAnim = useRef(new Animated.Value(isNew ? 0 : 1)).current;

  useEffect(() => {
    if (isNew) {
      Animated.parallel([
        Animated.timing(slideAnim, {
          toValue: 0,
          duration: 500,
          easing: Easing.out(Easing.back(1.5)),
          useNativeDriver: true,
        }),
        Animated.timing(fadeAnim, {
          toValue: 1,
          duration: 300,
          useNativeDriver: true,
        }),
      ]).start();
      
      const timer = setTimeout(() => setHighlight(false), 2000);
      return () => clearTimeout(timer);
    }
  }, [isNew]);

  const getOrderItems = () => {
    try {
      if (typeof order.order_items === 'string') {
        return JSON.parse(order.order_items);
      }
      return order.order_items || [];
    } catch (error) {
      console.error('Error parsing order items:', error);
      return [];
    }
  };

  const formatTime = (timestamp) => {
    const date = new Date(timestamp);
    return date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
  };

  const getTimeElapsed = (timestamp) => {
    const now = new Date();
    const orderTime = new Date(timestamp);
    const diffMinutes = Math.floor((now - orderTime) / (1000 * 60));
    
    if (diffMinutes < 1) return "Just now";
    if (diffMinutes < 60) return `${diffMinutes}m ago`;
    
    const diffHours = Math.floor(diffMinutes / 60);
    return `${diffHours}h ago`;
  };

  const orderItems = getOrderItems();
  const totalItems = orderItems.reduce((sum, item) => sum + (item.quantity || 1), 0);
  const totalPrice = parseFloat(order.total_price || 0).toFixed(2);

  // Use deleted_at to determine if order is archived
  const isArchived = order.deleted_at !== null && order.deleted_at !== undefined;
  const isCompleted = order.status === ORDER_STATUS.COMPLETED;
  const isDeclined = order.status === ORDER_STATUS.DECLINED;

  return (
    <Animated.View
      style={[
        styles.orderCard,
        highlight && styles.highlightedOrder,
        isArchived && styles.archivedOrder,
        isDeclined && styles.declinedOrder,
        isCompleted && styles.completedOrder,
        { 
          borderLeftColor: isArchived ? Colors.archived : 
                          isCompleted ? Colors.success : 
                          isDeclined ? Colors.error : Colors.warning,
          opacity: fadeAnim,
          transform: [{ translateX: slideAnim }],
        }
      ]}
    >
      {/* Order Header */}
      <View style={styles.orderHeader}>
        <View>
          <Text style={styles.orderTimeElapsed}>
            ‚è∞ {getTimeElapsed(order.created_at)}
          </Text>
          <Text style={styles.orderId}>ORDER #{order.id}</Text>
        </View>
        
        {/* Status Badge */}
        <View style={[
          styles.orderStatusBadge,
          isArchived && styles.archivedBadge,
          isCompleted && styles.completedBadge,
          isDeclined && styles.declinedBadge
        ]}>
          <Icon 
            name={
              isArchived ? 'archive' :
              isCompleted ? 'check-circle' :
              isDeclined ? 'cancel' :
              'schedule'
            } 
            size={14} 
            color={Colors.text} 
          />
          <Text style={styles.orderStatusText}>
            {isArchived ? 'ARCHIVED' : 
             isCompleted ? 'COMPLETED' : 
             isDeclined ? 'DECLINED' : 
             order.status.toUpperCase()}
          </Text>
        </View>
      </View>

      {/* Customer Info */}
      <View style={styles.customerSection}>
        <Icon name="person" size={16} color={Colors.textSecondary} />
        <Text style={styles.customerName}>{order.customer_name || "Customer"}</Text>
        <Text style={styles.orderTime}>{formatTime(order.created_at)}</Text>
      </View>

      {/* Order Summary */}
      <View style={styles.orderSummary}>
        <View style={styles.summaryItem}>
          <Icon name="restaurant" size={14} color={Colors.textSecondary} />
          <Text style={styles.summaryText}>{totalItems} items</Text>
        </View>
        <View style={styles.summaryItem}>
          <Icon name="attach-money" size={14} color={Colors.textSecondary} />
          <Text style={styles.summaryText}>${totalPrice}</Text>
        </View>
      </View>

      {/* Quick Preview of Items */}
      <View style={styles.itemsPreview}>
        {orderItems.slice(0, 2).map((item, index) => (
          <Text key={index} style={styles.previewItem}>
            ‚Ä¢ {item.quantity || 1}x {item.name}
            {item.wingFlavor && ` (${item.wingFlavor})`}
          </Text>
        ))}
        {orderItems.length > 2 && (
          <Text style={styles.moreItems}>+{orderItems.length - 2} more items</Text>
        )}
      </View>

      {/* Reason for Decline (if declined) */}
      {isDeclined && order.declined_reason && (
        <View style={styles.reasonContainer}>
          <Icon name="info" size={16} color={Colors.warning} />
          <Text style={styles.reasonText}>Reason: {order.declined_reason}</Text>
        </View>
      )}

      {/* Action Buttons - Only for pending AND not archived orders */}
      {order.status === ORDER_STATUS.PENDING && !isArchived && (
        <View style={styles.orderActions}>
          <TouchableOpacity
            style={[styles.actionButton, styles.completeButton]}
            onPress={() => onUpdateStatus(order.id)}
          >
            <Icon name="check" size={16} color={Colors.text} />
            <Text style={styles.actionButtonText}>Complete</Text>
          </TouchableOpacity>
          
          <TouchableOpacity
            style={[styles.actionButton, styles.declineButton]}
            onPress={() => onDecline(order)}
          >
            <Icon name="close" size={16} color={Colors.text} />
            <Text style={styles.actionButtonText}>Decline</Text>
          </TouchableOpacity>
        </View>
      )}

      {/* Archived/Completed/Declined Status */}
      {(isArchived || isCompleted || isDeclined) && (
        <View style={styles.softDeleteStatus}>
          <Text style={[
            styles.softDeleteText,
            isCompleted && styles.completedText,
            isDeclined && styles.declinedText,
            isArchived && styles.archivedText
          ]}>
            {isCompleted && "‚úÖ Order Completed ‚Ä¢ ARCHIVED"}
            {isDeclined && "‚ùå Order Declined ‚Ä¢ ARCHIVED"}
            {isArchived && order.status === 'pending' && "üìÅ Order Archived (Pending)"}
          </Text>
        </View>
      )}
    </Animated.View>
  );
};

// ============================================
// DATABASE TEST FUNCTION
// ============================================

const testDatabaseConnection = async () => {
  console.log('üîç Testing database connection...');
  
  const tests = {
    canQueryKitchens: false,
    canUpdateKitchens: false,
    canQueryOrders: false,
    canUpdateOrders: false
  };
  
  try {
    // Test 1: Can we query Kitchens table?
    const { data: kitchens, error: kitchenError } = await supabase
      .from('Kitchens')
      .select('*')
      .eq('id', KITCHEN_ID);
    
    tests.canQueryKitchens = !kitchenError && kitchens && kitchens.length > 0;
    console.log('‚úÖ Kitchens query:', tests.canQueryKitchens ? 'SUCCESS' : 'FAILED', kitchens);
    
    // Test 2: Can we update Kitchens table?
    if (tests.canQueryKitchens) {
      const { error: updateError } = await supabase
        .from('Kitchens')
        .update({ updated_at: new Date().toISOString() })
        .eq('id', KITCHEN_ID);
      
      tests.canUpdateKitchens = !updateError;
      console.log('‚úÖ Kitchens update:', tests.canUpdateKitchens ? 'SUCCESS' : 'FAILED');
    }
    
    // Test 3: Can we query Orders table?
    const { data: orders, error: ordersError } = await supabase
      .from('orders')
      .select('id, status, deleted_at')
      .eq('kitchen_id', KITCHEN_ID)
      .limit(5);
    
    tests.canQueryOrders = !ordersError;
    console.log('‚úÖ Orders query:', tests.canQueryOrders ? 'SUCCESS' : 'FAILED');
    
    // Test 4: Can we update Orders table?
    if (tests.canQueryOrders && orders && orders.length > 0) {
      const testOrder = orders[0];
      const { error: orderUpdateError } = await supabase
        .from('orders')
        .update({ updated_at: new Date().toISOString() })
        .eq('id', testOrder.id);
      
      tests.canUpdateOrders = !orderUpdateError;
      console.log('‚úÖ Orders update:', tests.canUpdateOrders ? 'SUCCESS' : 'FAILED');
    }
    
    return tests;
    
  } catch (error) {
    console.error('‚ùå Database test error:', error);
    return tests;
  }
};

// ============================================
// MAIN KITCHEN SCREEN
// ============================================
const KitchenScreen = () => {
  // State Management
  const [orders, setOrders] = useState([]);
  const [filteredOrders, setFilteredOrders] = useState([]);
  const [isKitchenOpen, setIsKitchenOpen] = useState(true);
  const [isLoading, setIsLoading] = useState(true);
  const [isRefreshing, setIsRefreshing] = useState(false);
  const [showDeclineModal, setShowDeclineModal] = useState(false);
  const [selectedOrder, setSelectedOrder] = useState(null);
  const [declineReason, setDeclineReason] = useState("");
  const [showArchived, setShowArchived] = useState(false);
  const [activeOrdersCount, setActiveOrdersCount] = useState(0);
  const [newOrdersCount, setNewOrdersCount] = useState(0);
  
  // Live Update States
  const [liveNotification, setLiveNotification] = useState({
    visible: false,
    message: '',
    type: 'info'
  });
  
  // Connection Status State
  const [connectionStatus, setConnectionStatus] = useState({
    connected: null,
    lastUpdate: null,
    reconnectAttempts: 0,
    isConnecting: false
  });

  // Refs
  const ordersChannel = useRef(null);
  const kitchenChannel = useRef(null);
  const appState = useRef(AppState.currentState);
  const reconnectTimeout = useRef(null);
  const lastOrderCount = useRef(0);
  const newOrdersRef = useRef([]);

  // ============================================
  // NOTIFICATION MANAGEMENT
  // ============================================

  const showLiveNotification = useCallback((message, type = 'info') => {
    setLiveNotification({
      visible: true,
      message,
      type
    });
  }, []);

  const hideLiveNotification = useCallback(() => {
    setLiveNotification(prev => ({ ...prev, visible: false }));
  }, []);

  // Enhanced Function to create notification record in database
  const createOrderNotification = useCallback(async (orderId, customerName, status, reason = null) => {
    try {
      const notificationMessage = status === ORDER_STATUS.COMPLETED 
        ? `Your order #${orderId} has been completed! Thank you for your order.`
        : `Your order #${orderId} has been declined. Reason: ${reason || 'Not specified'}`;
      
      console.log('üì® Creating notification:', {
        orderId,
        customerName,
        message: notificationMessage,
        type: status
      });
      
      // Try to insert into notifications table first (primary method)
      const numericOrderId = Number(orderId);
      
      const { error: notificationError } = await supabase
        .from('notifications')
        .insert({
          order_id: numericOrderId,
          customer_name: customerName,
          message: notificationMessage,
          type: status,
          created_at: new Date().toISOString()
        });

      if (notificationError) {
        console.error('‚ùå Notification error:', notificationError);
        
        // Fallback 1: Try without order_id
        const { error: simpleError } = await supabase
          .from('notifications')
          .insert({
            customer_name: customerName,
            message: notificationMessage,
            type: status,
            created_at: new Date().toISOString()
          });
        
        if (simpleError) {
          console.error('‚ùå Simple notification also failed:', simpleError);
          
          // Fallback 2: Use suggestions table (existing fallback)
          const { error: suggestionsError } = await supabase
            .from('suggestions')
            .insert({
              customer_name: customerName,
              suggestion: notificationMessage,
              created_at: new Date().toISOString()
            });

          if (suggestionsError) {
            console.error('‚ùå All notification methods failed:', suggestionsError);
          } else {
            console.log('‚úÖ Notification created in suggestions table');
          }
        } else {
          console.log('‚úÖ Notification created without order_id');
        }
      } else {
        console.log('‚úÖ Notification created successfully in notifications table');
      }
    } catch (error) {
      console.error('Error in createOrderNotification:', error);
      
      // Final fallback: log to console only
      console.log('üì® Notification would have been:', {
        orderId,
        customerName,
        status,
        reason,
        timestamp: new Date().toISOString()
      });
    }
  }, []);

  // ============================================
  // CONNECTION MANAGEMENT
  // ============================================

  const updateConnectionStatus = useCallback((status) => {
    const updateTime = new Date();
    setConnectionStatus(prev => ({
      ...prev,
      connected: status,
      lastUpdate: updateTime,
      isConnecting: status === null
    }));

    if (status === true) {
      showLiveNotification("Live connection established!", 'success');
    }
  }, [showLiveNotification]);

  const setupRealTimeConnections = useCallback(async () => {
    console.log('üîÑ Setting up real-time connections...');
    updateConnectionStatus(null);
    
    // Clean up existing connections
    if (ordersChannel.current) {
      supabase.removeChannel(ordersChannel.current);
    }
    if (kitchenChannel.current) {
      supabase.removeChannel(kitchenChannel.current);
    }
    
    // Clear any existing reconnect timeout
    if (reconnectTimeout.current) {
      clearTimeout(reconnectTimeout.current);
      reconnectTimeout.current = null;
    }
    
    try {
      // First, ensure kitchen exists
      console.log('üîç Checking kitchen with ID:', KITCHEN_ID);
      
      const { data: kitchens, error: kitchenError } = await supabase
        .from('Kitchens')
        .select('*')
        .eq('id', KITCHEN_ID);

      if (kitchenError || !kitchens || kitchens.length === 0) {
        console.log('üè™ Kitchen not found, creating...');
        const { error: createError } = await supabase
          .from('Kitchens')
          .upsert({
            id: KITCHEN_ID,
            name: 'Main Kitchen',
            is_open: true,
            created_at: new Date().toISOString(),
            updated_at: new Date().toISOString()
          });

        if (createError) {
          console.error('‚ùå Error creating kitchen:', createError);
        } else {
          console.log('‚úÖ Kitchen created/updated successfully');
        }
      } else {
        console.log('‚úÖ Kitchen found:', kitchens[0]);
        setIsKitchenOpen(kitchens[0].is_open);
      }
      
      // Setup Orders Channel
      ordersChannel.current = supabase
        .channel('orders-realtime')
        .on('postgres_changes', 
          { 
            event: '*', 
            schema: 'public', 
            table: 'orders',
            filter: `kitchen_id=eq.${KITCHEN_ID}`
          }, 
          async (payload) => {
            console.log('üì¶ Real-time order update:', payload.eventType, payload.new?.id);
            
            updateConnectionStatus(true);
            
            // Track new orders
            if (payload.eventType === 'INSERT') {
              newOrdersRef.current.push(payload.new.id);
              setNewOrdersCount(prev => prev + 1);
            }
            
            // AUTO-DECLINE LOGIC WHEN KITCHEN IS CLOSED
            if (payload.eventType === 'INSERT' && !isKitchenOpen) {
              console.log('üè™ Kitchen is closed, auto-declining order:', payload.new.id);
              
              try {
                const currentTime = new Date().toISOString();
                const { error: declineError } = await supabase
                  .from('orders')
                  .update({ 
                    status: ORDER_STATUS.DECLINED,
                    declined_reason: 'Kitchen is currently closed',
                    deleted_at: currentTime,
                    updated_at: currentTime
                  })
                  .eq('id', payload.new.id);
                
                if (declineError) {
                  console.error('‚ùå Auto-decline error:', declineError);
                } else {
                  console.log('‚úÖ Auto-decline successful');
                }
                
                // Create notification for auto-declined order
                createOrderNotification(
                  payload.new.id,
                  payload.new.customer_name,
                  ORDER_STATUS.DECLINED,
                  'Kitchen is currently closed'
                );
                
                showLiveNotification(
                  `Order #${payload.new.id} auto-declined (kitchen closed)`,
                  'error'
                );
              } catch (error) {
                console.error('Error auto-declining order:', error);
              }
            }
            
            // Show notification for new orders when kitchen is open
            if (payload.eventType === 'INSERT' && isKitchenOpen) {
              showLiveNotification(
                `üì¶ New Order #${payload.new.id} from ${payload.new.customer_name || 'Customer'}`,
                'info'
              );
            }
            
            refreshAllData();
          }
        )
        .subscribe((status) => {
          console.log('Orders channel subscription status:', status);
          if (status === 'SUBSCRIBED') {
            console.log('‚úÖ Orders real-time connection established');
            updateConnectionStatus(true);
            setConnectionStatus(prev => ({ ...prev, reconnectAttempts: 0 }));
          } else if (status === 'CHANNEL_ERROR' || status === 'CLOSED') {
            console.log('‚ùå Orders real-time connection failed');
            updateConnectionStatus(false);
            scheduleReconnection();
          }
        });
      
      // Setup Kitchen Channel
      kitchenChannel.current = supabase
        .channel('kitchen-realtime')
        .on('postgres_changes',
          {
            event: '*',
            schema: 'public',
            table: 'Kitchens',
            filter: `id=eq.${KITCHEN_ID}`
          },
          (payload) => {
            console.log('üè™ Real-time kitchen update:', payload.eventType);
            updateConnectionStatus(true);
            
            if (payload.new?.is_open !== undefined) {
              console.log('üè™ Kitchen status changed:', payload.new.is_open);
              setIsKitchenOpen(payload.new.is_open);
              showLiveNotification(
                `Kitchen is now ${payload.new.is_open ? "OPEN" : "CLOSED"}`,
                payload.new.is_open ? 'success' : 'warning'
              );
            }
          }
        )
        .subscribe();
      
    } catch (error) {
      console.error('Error setting up real-time connections:', error);
      updateConnectionStatus(false);
      scheduleReconnection();
    }
  }, [isKitchenOpen, updateConnectionStatus, showLiveNotification, createOrderNotification]);

  const scheduleReconnection = useCallback(() => {
    if (reconnectTimeout.current) {
      clearTimeout(reconnectTimeout.current);
    }
    
    const attempts = connectionStatus.reconnectAttempts + 1;
    const delay = Math.min(1000 * Math.pow(2, attempts), 30000);
    
    console.log(`üîÑ Scheduling reconnection attempt ${attempts} in ${delay}ms`);
    
    setConnectionStatus(prev => ({ ...prev, reconnectAttempts: attempts }));
    
    reconnectTimeout.current = setTimeout(() => {
      console.log(`üîÑ Attempting reconnection (attempt ${attempts})`);
      showLiveNotification(`Reconnecting... (attempt ${attempts})`, 'info');
      setupRealTimeConnections();
    }, delay);
  }, [connectionStatus.reconnectAttempts, setupRealTimeConnections, showLiveNotification]);

  const manualReconnect = useCallback(() => {
    console.log('üîÑ Manual reconnection requested');
    showLiveNotification("Attempting to reconnect...", 'info');
    
    if (reconnectTimeout.current) {
      clearTimeout(reconnectTimeout.current);
      reconnectTimeout.current = null;
    }
    
    setConnectionStatus(prev => ({ ...prev, reconnectAttempts: 0 }));
    setupRealTimeConnections();
  }, [setupRealTimeConnections, showLiveNotification]);

  // ============================================
  // DATA LOADING FUNCTIONS
  // ============================================

  const loadKitchenStatus = useCallback(async () => {
    try {
      console.log('üîç Loading kitchen status from Kitchens table...');
      
      const { data, error } = await supabase
        .from('Kitchens')
        .select('is_open')
        .eq('id', KITCHEN_ID);

      if (error || !data || data.length === 0) {
        console.log('‚ö†Ô∏è Kitchen not found, creating default...', error);
        const { error: createError } = await supabase
          .from('Kitchens')
          .upsert([{ 
            id: KITCHEN_ID,
            name: 'Main Kitchen', 
            is_open: true,
            created_at: new Date().toISOString(),
            updated_at: new Date().toISOString()
          }]);

        if (createError) {
          console.error('‚ùå Error creating kitchen:', createError);
          return;
        }

        console.log('‚úÖ Kitchen created, setting to open');
        setIsKitchenOpen(true);
        return;
      }

      console.log('‚úÖ Kitchen status loaded:', data[0]?.is_open);
      setIsKitchenOpen(data[0]?.is_open || false);
    } catch (error) {
      console.error('‚ùå Error loading kitchen status:', error);
    }
  }, []);

  const filterOrders = useCallback((ordersList, showArchivedView) => {
    console.log('üîç Filtering orders:', {
      totalOrders: ordersList.length,
      showArchivedView,
      ordersWithDeletedAt: ordersList.filter(o => o.deleted_at).length,
      ordersWithoutDeletedAt: ordersList.filter(o => !o.deleted_at).length
    });
    
    if (showArchivedView) {
      // Show only orders with deleted_at set (archived orders)
      const archivedOrders = ordersList.filter(order => 
        order.deleted_at !== null && order.deleted_at !== undefined
      );
      console.log('üìÅ Archived orders (deleted_at not null):', archivedOrders.length);
      setFilteredOrders(archivedOrders);
      
      // Update active orders count - only count non-deleted orders
      const activeCount = ordersList.filter(order => 
        !order.deleted_at
      ).length;
      setActiveOrdersCount(activeCount);
    } else {
      // Show only orders WITHOUT deleted_at (active orders)
      const activeOrders = ordersList.filter(order => 
        order.deleted_at === null || order.deleted_at === undefined
      );
      console.log('üìã Active orders (deleted_at null):', activeOrders.length);
      setFilteredOrders(activeOrders);
      
      // Update active orders count
      setActiveOrdersCount(activeOrders.length);
    }
  }, []);

  const loadOrders = useCallback(async () => {
    try {
      console.log('üì• Loading orders...');
      const { data, error } = await supabase
        .from('orders')
        .select('*')
        .eq('kitchen_id', KITCHEN_ID)
        .order('created_at', { ascending: false });

      if (error) {
        console.error('Error loading orders:', error);
        throw error;
      }

      const ordersData = data || [];
      
      // Log deleted_at status
      const withDeleted = ordersData.filter(o => o.deleted_at).length;
      const withoutDeleted = ordersData.filter(o => !o.deleted_at).length;
      
      console.log('üìä Orders loaded:', {
        total: ordersData.length,
        with_deleted_at: withDeleted,
        without_deleted_at: withoutDeleted,
        byStatus: ordersData.reduce((acc, order) => {
          const key = `${order.status}${order.deleted_at ? ' (archived)' : ''}`;
          acc[key] = (acc[key] || 0) + 1;
          return acc;
        }, {})
      });
      
      setOrders(ordersData);
      filterOrders(ordersData, showArchived);
      
      // Check for new orders since last load
      const currentCount = ordersData.length;
      if (lastOrderCount.current > 0 && currentCount > lastOrderCount.current) {
        const newOrders = currentCount - lastOrderCount.current;
        if (newOrders > 0 && isKitchenOpen) {
          showLiveNotification(`${newOrders} new order(s) received`, 'info');
        }
      }
      lastOrderCount.current = currentCount;
      
    } catch (error) {
      console.error('Error loading orders:', error);
      showLiveNotification('Error loading orders', 'error');
    } finally {
      setIsLoading(false);
      setIsRefreshing(false);
    }
  }, [showArchived, isKitchenOpen, showLiveNotification, filterOrders]);

  const refreshAllData = useCallback(async () => {
    console.log('üîÑ Refreshing all data...');
    setIsRefreshing(true);
    try {
      await Promise.all([
        loadOrders(),
        loadKitchenStatus()
      ]);
    } catch (error) {
      console.error('Error refreshing data:', error);
    } finally {
      setIsRefreshing(false);
    }
  }, [loadOrders, loadKitchenStatus]);

  // ============================================
  // FIXED KITCHEN TOGGLE FUNCTION
  // ============================================

  const toggleKitchen = useCallback(async () => {
    const newState = !isKitchenOpen;

    console.log('üîÑ Toggling kitchen status:', {
      current: isKitchenOpen,
      new: newState,
      kitchenId: KITCHEN_ID
    });

    try {
      console.log('üì§ Upserting kitchen status...');
      
      const { data, error } = await supabase
        .from('Kitchens')
        .upsert({ 
          id: KITCHEN_ID,
          name: 'Main Kitchen',
          is_open: newState,
          created_at: new Date().toISOString(),
          updated_at: new Date().toISOString()
        })
        .select()
        .single();

      if (error) {
        console.error('‚ùå Kitchen toggle error:', error);
        
        // Try direct update as fallback
        const { error: updateError } = await supabase
          .from('Kitchens')
          .update({ 
            is_open: newState,
            updated_at: new Date().toISOString()
          })
          .eq('id', KITCHEN_ID);

        if (updateError) {
          throw updateError;
        }
      } else {
        console.log('‚úÖ Kitchen updated successfully:', data);
      }

      setIsKitchenOpen(newState);
      
      showLiveNotification(
        `Kitchen is now ${newState ? 'OPEN' : 'CLOSED'}`,
        newState ? 'success' : 'warning'
      );
      
      // Refresh data to sync with database
      setTimeout(() => {
        refreshAllData();
      }, 500);
      
    } catch (error) {
      console.error('‚ùå Error toggling kitchen:', {
        message: error.message,
        code: error.code,
        hint: error.hint
      });
      
      // Try REST API as last resort
      try {
        console.log('üîÑ Trying REST API...');
        const response = await fetch(`${SUPABASE_URL}/rest/v1/Kitchens?id=eq.${KITCHEN_ID}`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
            'apikey': SUPABASE_ANON_KEY,
            'Authorization': `Bearer ${SUPABASE_ANON_KEY}`,
            'Prefer': 'return=representation'
          },
          body: JSON.stringify({
            is_open: newState,
            updated_at: new Date().toISOString()
          })
        });
        
        if (response.ok) {
          console.log('‚úÖ REST API update succeeded');
          setIsKitchenOpen(newState);
          showLiveNotification(
            `Kitchen is now ${newState ? 'OPEN' : 'CLOSED'} (via REST API)`,
            newState ? 'success' : 'warning'
          );
          return;
        }
      } catch (restError) {
        console.error('‚ùå REST API failed:', restError);
      }
      
      // Final fallback: Update local state only
      setIsKitchenOpen(newState);
      showLiveNotification(
        `Kitchen status changed locally to ${newState ? 'OPEN' : 'CLOSED'} (database update failed)`,
        'warning'
      );
    }
  }, [isKitchenOpen, showLiveNotification, refreshAllData]);

  // ============================================
  // FIXED ORDER ACTIONS WITH ARCHIVE SUPPORT
  // ============================================

  const updateOrderStatus = async (orderId, action, reason = null) => {
    try {
      const order = orders.find(o => o.id === orderId);
      if (!order) {
        console.error('Order not found:', orderId);
        showLiveNotification('Order not found', 'error');
        return;
      }

      console.log('üìù Starting order update:', {
        orderId,
        action,
        currentStatus: order.status,
        currentDeletedAt: order.deleted_at
      });

      const currentTime = new Date().toISOString();
      let updateData = {};
      let message = '';
      let notificationType = 'info';
      
      if (action === ORDER_STATUS.COMPLETED) {
        updateData = { 
          status: ORDER_STATUS.COMPLETED,
          declined_reason: null,
          deleted_at: currentTime, // This archives it!
          updated_at: currentTime  // Required by trigger!
        };
        message = 'Order completed and archived!';
        notificationType = 'success';
      } else if (action === ORDER_STATUS.DECLINED) {
        updateData = { 
          status: ORDER_STATUS.DECLINED,
          declined_reason: reason,
          deleted_at: currentTime, // This archives it!
          updated_at: currentTime  // Required by trigger!
        };
        message = 'Order declined and archived!';
        notificationType = 'error';
      } else {
        console.error('Unknown action:', action);
        return;
      }

      console.log('üì§ Sending update to Supabase:', updateData);
      
      const { data: updatedOrder, error } = await supabase
        .from('orders')
        .update(updateData)
        .eq('id', orderId)
        .select()
        .single();

      if (error) {
        console.error('‚ùå Supabase update error:', error);
        
        // Try without .single() as fallback
        const { error: simpleError } = await supabase
          .from('orders')
          .update(updateData)
          .eq('id', orderId);

        if (simpleError) {
          throw simpleError;
        }
      }

      console.log('‚úÖ Update successful!', updatedOrder);
      
      // Create notification for customer using the enhanced function
      try {
        await createOrderNotification(
          orderId,
          order.customer_name,
          action,
          reason
        );
        console.log('üì® Notification created');
      } catch (notifError) {
        console.error('Notification error:', notifError);
      }

      showLiveNotification(message, notificationType);
      
      // Auto-switch to archives view after 2 seconds
      setTimeout(() => {
        setShowArchived(true);
        showLiveNotification('Switched to archives view', 'info');
      }, 2000);
      
      // Update the local state immediately
      setOrders(prevOrders => {
        const updatedOrders = prevOrders.map(order => {
          if (order.id === orderId) {
            return {
              ...order,
              ...updateData
            };
          }
          return order;
        });
        
        // Update filtered orders based on the current showArchived state
        filterOrders(updatedOrders, showArchived);
        
        return updatedOrders;
      });
      
      // Also refresh from server after a short delay to ensure sync
      setTimeout(() => {
        refreshAllData();
      }, 1000);

    } catch (error) {
      console.error('‚ùå Error updating order status:', error);
      showLiveNotification(`Failed to update order: ${error.message}`, 'error');
    }
  };

  const openDeclineModal = (order) => {
    setSelectedOrder(order);
    setShowDeclineModal(true);
    setDeclineReason('');
  };

  const closeDeclineModal = () => {
    setShowDeclineModal(false);
    setSelectedOrder(null);
    setDeclineReason('');
  };

  const handleDeclineConfirm = () => {
    if (selectedOrder && declineReason.trim()) {
      updateOrderStatus(selectedOrder.id, ORDER_STATUS.DECLINED, declineReason);
      closeDeclineModal();
    } else {
      showLiveNotification('Please provide a reason for declining', 'error');
    }
  };

  const handleCompleteOrder = (orderId) => {
    Alert.alert(
      'Complete Order',
      'Mark this order as completed?\n\nIt will be moved to archives.',
      [
        { text: 'Cancel', style: 'cancel' },
        { 
          text: 'Complete', 
          onPress: async () => {
            await updateOrderStatus(orderId, ORDER_STATUS.COMPLETED);
          }
        }
      ]
    );
  };

  // ============================================
  // EFFECTS
  // ============================================

  useEffect(() => {
    refreshAllData();
    setupRealTimeConnections();
    
    const subscription = AppState.addEventListener('change', (nextAppState) => {
      if (
        appState.current.match(/inactive|background/) &&
        nextAppState === 'active'
      ) {
        console.log('üì± App came to foreground, reconnecting...');
        showLiveNotification('Reconnecting to live updates...', 'info');
        manualReconnect();
      }
      appState.current = nextAppState;
    });

    return () => {
      subscription.remove();
      if (ordersChannel.current) {
        supabase.removeChannel(ordersChannel.current);
      }
      if (kitchenChannel.current) {
        supabase.removeChannel(kitchenChannel.current);
      }
      if (reconnectTimeout.current) {
        clearTimeout(reconnectTimeout.current);
      }
    };
  }, []);

  useEffect(() => {
    filterOrders(orders, showArchived);
  }, [orders, showArchived, filterOrders]);

  // ============================================
  // RENDER FUNCTIONS
  // ============================================

  const renderHeader = () => (
    <View style={styles.header}>
      <View>
        <Text style={styles.title}>KITCHEN DISPLAY</Text>
        <Text style={styles.subtitle}>Live Updates ‚Ä¢ Orders Archive When Completed/Declined</Text>
      </View>
      <View style={styles.headerActions}>
        {/* Database Test Button */}
        <TouchableOpacity
          style={styles.testButton}
          onPress={async () => {
            console.log('üîç Testing database connection...');
            showLiveNotification('Running database tests...', 'info');
            
            const tests = await testDatabaseConnection();
            const allPassed = Object.values(tests).every(test => test);
            
            if (allPassed) {
              showLiveNotification('‚úÖ All database tests passed!', 'success');
            } else {
              const failedTests = Object.entries(tests)
                .filter(([_, passed]) => !passed)
                .map(([test]) => test)
                .join(', ');
              showLiveNotification(`‚ùå Failed tests: ${failedTests}`, 'error');
            }
          }}
        >
          <Icon 
            name='database' 
            size={24} 
            color={Colors.warning} 
          />
        </TouchableOpacity>
        
        <TouchableOpacity
          style={styles.reconnectButton}
          onPress={manualReconnect}
          disabled={connectionStatus.connected === true}
        >
          <Icon 
            name='wifi' 
            size={24} 
            color={connectionStatus.connected === true ? Colors.connected : 
                   connectionStatus.connected === false ? Colors.disconnected : 
                   Colors.connecting} 
          />
        </TouchableOpacity>
        <TouchableOpacity
          style={styles.refreshButton}
          onPress={refreshAllData}
          disabled={isRefreshing}
        >
          <Icon 
            name='refresh' 
            size={24} 
            color={isRefreshing ? Colors.primary : Colors.text} 
          />
        </TouchableOpacity>
      </View>
    </View>
  );

  const renderFilterBar = () => (
    <View style={styles.filterBar}>
      <View style={styles.switchContainer}>
        <Text style={styles.switchLabel}>
          {showArchived ? 'Viewing Archives' : 'Viewing Active'}
        </Text>
        <Switch
          value={showArchived}
          onValueChange={setShowArchived}
          trackColor={{ false: '#767577', true: Colors.archived }}
          thumbColor={showArchived ? Colors.text : '#f4f3f4'}
        />
      </View>
      
      <Text style={styles.archiveInfo}>
        {showArchived 
          ? 'Archived orders (deleted_at set)' 
          : 'Active orders (deleted_at null)'}
      </Text>
    </View>
  );

  const renderOrdersList = () => {
    if (isLoading) {
      return (
        <View style={styles.loadingContainer}>
          <ActivityIndicator size='large' color={Colors.primary} />
          <Text style={styles.loadingText}>Loading orders...</Text>
          {connectionStatus.connected === false && (
            <Text style={styles.loadingSubtext}>
              Using cached data. Attempting to reconnect...
            </Text>
          )}
        </View>
      );
    }

    if (filteredOrders.length === 0) {
      return (
        <View style={styles.emptyState}>
          <Icon 
            name={showArchived ? 'archive' : 'receipt'} 
            size={isTablet ? 80 : 64} 
            color={Colors.textSecondary} 
          />
          <Text style={styles.emptyStateText}>
            {showArchived 
              ? 'No archived orders' 
              : isKitchenOpen 
                ? 'No pending orders' 
                : 'Kitchen is closed'}
          </Text>
          {!showArchived && !isKitchenOpen && (
            <Text style={styles.emptyStateSubtext}>
              Open the kitchen to accept new orders
            </Text>
          )}
        </View>
      );
    }

    return (
      <FlatList
        data={filteredOrders}
        renderItem={({ item }) => (
          <OrderCard
            order={item}
            onUpdateStatus={handleCompleteOrder}
            onDecline={openDeclineModal}
            isNew={newOrdersRef.current.includes(item.id)}
          />
        )}
        keyExtractor={item => item.id.toString()}
        showsVerticalScrollIndicator={false}
        contentContainerStyle={styles.ordersList}
        refreshControl={
          <RefreshControl
            refreshing={isRefreshing}
            onRefresh={refreshAllData}
            tintColor={Colors.primary}
            colors={[Colors.primary]}
          />
        }
        numColumns={isLargeScreen ? 2 : 1}
        columnWrapperStyle={isLargeScreen ? styles.columnWrapper : null}
      />
    );
  };

  // ============================================
  // MAIN RENDER
  // ============================================
  return (
    <SafeAreaView style={styles.container}>
      <StatusBar barStyle='light-content' backgroundColor={Colors.background} />
      
      {/* Live Notification */}
      <LiveNotification
        message={liveNotification.message}
        type={liveNotification.type}
        visible={liveNotification.visible}
        onHide={hideLiveNotification}
      />
      
      {/* Header */}
      {renderHeader()}
      
      {/* Kitchen Status */}
      <KitchenStatus
        isOpen={isKitchenOpen}
        onToggle={toggleKitchen}
        activeOrdersCount={activeOrdersCount}
        connectionStatus={connectionStatus}
        newOrderCount={newOrdersCount}
      />
      
      {/* Filter Bar */}
      {renderFilterBar()}
      
      {/* Orders List */}
      <View style={styles.ordersContainer}>
        {renderOrdersList()}
      </View>

      {/* Decline Order Modal */}
      <Modal
        visible={showDeclineModal}
        animationType='slide'
        transparent={true}
        onRequestClose={closeDeclineModal}
      >
        <View style={styles.modalOverlay}>
          <View style={[styles.modalContent, isTablet && styles.modalContentTablet]}>
            <View style={styles.modalHeader}>
              <Text style={styles.modalTitle}>Decline Order</Text>
              <TouchableOpacity onPress={closeDeclineModal}>
                <Icon name='close' size={24} color={Colors.text} />
              </TouchableOpacity>
            </View>
            
            <Text style={styles.modalSubtitle}>
              Order #{selectedOrder?.id} ‚Ä¢ {selectedOrder?.customer_name}
            </Text>
            
            <View style={styles.modalInfo}>
              <Icon name='info' size={20} color={Colors.warning} />
              <Text style={styles.modalInfoText}>
                This order will be declined and permanently moved to archives.
                A notification will be sent to the customer.
              </Text>
            </View>
            
            <Text style={styles.modalDescription}>
              Reason for declining:
            </Text>
            
            <TextInput
              style={[styles.reasonInput, isTablet && styles.reasonInputTablet]}
              placeholder='Enter reason (e.g., item unavailable, kitchen capacity...)'
              placeholderTextColor='#999'
              value={declineReason}
              onChangeText={setDeclineReason}
              multiline
              numberOfLines={4}
              textAlignVertical='top'
              autoFocus
            />
            
            <View style={styles.modalActions}>
              <TouchableOpacity
                style={[styles.confirmButton, !declineReason.trim() && styles.disabledButton]}
                onPress={handleDeclineConfirm}
                disabled={!declineReason.trim()}
              >
                <Icon name='close' size={20} color={Colors.text} />
                <Text style={styles.confirmButtonText}>Confirm Decline</Text>
              </TouchableOpacity>
              
              <TouchableOpacity
                style={styles.cancelButton}
                onPress={closeDeclineModal}
              >
                <Icon name='arrow-back' size={20} color={Colors.text} />
                <Text style={styles.cancelButtonText}>Cancel</Text>
              </TouchableOpacity>
            </View>
          </View>
        </View>
      </Modal>
    </SafeAreaView>
  );
};

// ============================================
// RESPONSIVE STYLES
// ============================================
const styles = StyleSheet.create({
  container: { 
    flex: 1, 
    backgroundColor: Colors.background,
    maxWidth: isLargeScreen ? 1200 : '100%',
    alignSelf: isLargeScreen ? 'center' : 'stretch',
  },
  
  // Live Notification
  liveNotification: {
    position: 'absolute',
    top: Platform.OS === 'web' ? 10 : StatusBar.currentHeight || 10,
    left: 20,
    right: 20,
    flexDirection: 'row',
    alignItems: 'center',
    padding: 15,
    borderRadius: 10,
    zIndex: 1000,
    elevation: 5,
    shadowColor: '#000',
    shadowOffset: { width: 0, height: 2 },
    shadowOpacity: 0.25,
    shadowRadius: 3.84,
  },
  liveNotificationText: {
    flex: 1,
    color: Colors.text,
    fontSize: 14,
    fontWeight: '600',
    marginLeft: 10,
    marginRight: 10,
  },
  notificationClose: {
    padding: 5,
  },
  
  // Header
  header: {
    flexDirection: 'row',
    justifyContent: 'space-between',
    alignItems: 'center',
    paddingHorizontal: isTablet ? 30 : 20,
    paddingVertical: isTablet ? 20 : 15,
    backgroundColor: Colors.card,
    borderBottomWidth: 1,
    borderBottomColor: 'rgba(255,255,255,0.1)',
  },
  title: {
    fontSize: isTablet ? 28 : 24,
    fontWeight: 'bold',
    color: Colors.primary,
    letterSpacing: 1,
  },
  subtitle: {
    fontSize: isTablet ? 12 : 10,
    color: Colors.textSecondary,
    marginTop: 4,
    fontStyle: 'italic',
  },
  headerActions: {
    flexDirection: 'row',
    gap: isTablet ? 20 : 15,
  },
  testButton: {
    padding: 8,
  },
  reconnectButton: {
    padding: 8,
  },
  refreshButton: {
    padding: 8,
  },
  
  // Kitchen Status
