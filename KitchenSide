    backgroundColor: 'rgba(108, 117, 125, 0.1)',
  },
  
  // Empty States & Loading
  loadingContainer: {
    flex: 1,
    alignItems: 'center',
    justifyContent: 'center',
    padding: 40,
  },
  loadingText: {
    color: Colors.textSecondary,
    marginTop: 12,
    fontSize: isTablet ? 20 : 16,
  },
  loadingSubtext: {
    color: Colors.warning,
    fontSize: isTablet ? 16 : 14,
    marginTop: 8,
    textAlign: 'center',
  },
  emptyState: {
    alignItems: 'center',
    justifyContent: 'center',
    padding: 40,
  },
