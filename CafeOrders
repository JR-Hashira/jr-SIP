  ],
  drinks: [
    { id: 8, name: "Soda", price: 2.50, category: 'drinks' },
    { id: 9, name: "Bottled Water", price: 1.50, category: 'drinks' },
  ]
};

const allMenuItems = Object.values(MenuItems).flat();

